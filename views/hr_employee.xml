<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="custom_hr_employee_commencement_business" model="ir.ui.view">
        <field name="name">hr_employee_commencement_business</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='work_location']" position="after">
                <field name="commencement_business" required="1"/>
            </xpath>
        </field>
    </record>
</odoo>